{% extends '/base.html.twig' %}

{% block title %}{{ parent () }} | Accueil{% endblock %}


{% block body %}
    <div>
        {{ form_start(mainForm) }}
        <div class="container">
            <div class="lieu">
                {{ form_row(mainForm.siteOrganisateur)}}
                {{ form_row(mainForm.searchName)}}
                    <div class="date">
                        {{ form_row(mainForm.dateDebut)}}
                        {{ form_row(mainForm.dateFin)}}
                    </div>
            </div>
            <div class="col">
                {{ form_row(mainForm.isOrganisateur)}}
                {{ form_row(mainForm.isInscrit)}}
                {{ form_row(mainForm.isNotInscrit)}}
                {{ form_row(mainForm.isPassed)}}
            </div>
            <div class="search">
                {{ form_row(mainForm.search)}}

            </div>
        </div>
        <div>
            <table>
                <tr>
                    <th>Nom de la sortie</th>
                    <th>Date de la sortie</th>
                    <th>Cl√¥ture</th>
                    <th>inscrits/places</th>
                    <th>Etat</th>
                    <th>Inscrit</th>
                    <th>Organisateur</th>
                    <th>Actions</th>
                </tr>
                {% for sortie in mainform.sorties %}
                    <tr>
                        <td>{{ serie.nom }}</td>
                        <td>{{ serie.dateHeureDebut|date }}</td>
                        <td>{{ serie.etat.dateLimiteInscription }}</td>
                        <td>{{ serie.nbInscriptionsMax }}</td>
                        <td>{{ serie.etat.id }}</td>
                        <td>{{ serie.etat.libelle }}</td>
                        <td>{{ serie.organisateur.id }}</td>
                        <td>todo</td>
                    </tr>
                {% endfor %}
            </table>
        </div>

        <div class="container">
            {{ form_row(mainForm.create)}}
        </div>


        {{ form_end(mainForm) }}
    </div>
{% endblock %}
