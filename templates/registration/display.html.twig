{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div>
        <h1 style="text-align: center">Profil de {{ user.nom }}</h1>

        <div class="profile">
            <div class="pdp">
                <img src="{{ asset('upload/photos/' ~ user.photo) }}" alt="Photo indisponible">
            </div>

            <section class="display">

                <div>
                    <p>Pr√©nom : {{ user.prenom }}</p>
                </div>
