{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div>
        <h1 style="text-align: center">Profil de {{ user.nom }}</h1>

        <div class="profile">
            <div class="pdp">
                <img src="{{ asset('upload/photos/' ~ user.photo) }}" alt="Photo indisponible">
            </div>
            <section class="display">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Pr√©nom :</th>
                        <td>{{ user.prenom }}</td>
                    </tr>
                    <tr>
                        <th>Nom :</th>
                        <td>{{ user.nom }}</td>
                    </tr>
                    <tr>
                        <th>Telephone :</th>
                        <td>{{ user.telephone }}</td>
                    </tr>
                    <tr>
                        <th>Email :</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    </tbody>
                </table>
                {% if is_granted("ROLE_ADMIN") %}
                    <div>
                        <button>
                            Rendre inactif
                        </button>
                        <button>
                            Supprimer l'utilisateur
                        </button>
                    </div>


                {% endif %}
            </section>
        </div>
    </div>


{% endblock %}