{% extends 'base.html.twig' %}

{% block body %}
    <div>
        {{ form_start(commentForm) }}
        <h1>Annulation d'une sortie</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Nom de la sortie :</th>
                <td><h2>{{ sortie.nom }}</h2></td>
            </tr>
            <tr>
                <th>Date de la sortie : </th>
                <td>{{ sortie.dateHeureDebut|date("d/m/Y") }}</td>
            </tr>
            <tr>
                <th>Campus : </th>
                <td>{{ sortie.siteOrganisateur.nom }}</td>
            </tr>
            <tr>
                <th>Lieu : </th>
                <td>{{ sortie.lieu.nom ~ ' ' ~ sortie.lieu.rue ~ ' ' ~ sortie.lieu.ville.codePostal ~ ' ' ~ sortie.lieu.ville.nom }}</td>
            </tr>
            </tbody>
        </table>

        <br />
        {{ form_widget(commentForm) }}
        <button name = 'valider' class="btn">Valider</button>
        <button name = 'annuler' class="btn">Annuler</button>
        {{ form_end(commentForm) }}
    </div>

{% endblock %}

{% block title %}

{% endblock %}

